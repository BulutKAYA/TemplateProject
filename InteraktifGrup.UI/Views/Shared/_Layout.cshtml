<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InteraktifGrup.UI</title>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/site.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">InteraktifGrup.UI</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="List">Listele</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Add">Ekle</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Update">Düzenle</a></li>
                    <li><button style="margin-top:10px" onclick="payment('true')">Kartla Ödeme</button></li>
                    <li><button style="margin-top:10px; margin-left:10px" onclick="payment('false')">Nakit Ödeme</button></li>

                </ul>
            </div>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - InteraktifGrup.UI</p>
        </footer>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
